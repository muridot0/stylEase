---
import ThemeToggle from "./ThemeToggle";
---

<header class="container flex items-center justify-between">
  <div class="flex items-center">
    <picture class="mr-4">
      <source srcset="stylEase-dark.svg" media="(prefers-color-scheme: dark)" />
      <img src="/stylEase-light.svg" alt="stylEase" />
    </picture>
    <h2 class="mt-1">stylEase</h2>
  </div>
  <div class="flex">
    <ThemeToggle client:only="preact" />
    <a href="#" class="flex items-center">
      <div class="i-lucide-github mr-2"></div>
      <p class="mt-1">Github</p>
    </a>
  </div>
</header>
